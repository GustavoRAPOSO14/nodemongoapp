<main>
    <div class="p-5 mb-4 bg-light rounded-3">
        <div class="container-fluid py-5">
            <h2>Lista de Equipes</h2>
            <hr>
            <a href="/rota_equipes/equipes/add">
                <button class="btn btn-success">Nova Equipe</button></a>
            {{#each equipes}}
            <div class="card mt-4">
                <div class="card-body">
                    <h4><b>ID:</b>{{_id}}</h4>
                    <small><b>Nome:</b> {{nome}} </small><br>
                    <small><b>Ano:</b> {{ano}} </small><br>
                    <small><b>Pais:</b> {{pais}} </small><br>
                    <small><b>Mundiais:</b> {{mundial}} </small><br>
                    <br>
                    <!--Botão para editar alunos-->
                    <a href="/rota_equipes/editar_equipes/{{_id}}">
                        <button class="btn btn-success mt-3">
                            Editar equipe
                        </button>
                    </a>
                    <!--botão para deletar aluno-->
                    <a href="/rota_equipes/deletar_equipes/{{_id}}">
                        <button class="btn btn-danger mt-3">
                            Deletar equipe
                        </button>
                    </a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</main>