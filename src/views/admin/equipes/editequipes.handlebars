<main>
    <div class="p-5 mb-4 bg-light rounded-3">
        <div class="container-fluid py-5">
            <h3> Editar Equipe: </h3>
            <div class="card">
                <div class="card-body">
                    <form action="/rota_equipes/equipes/editar_equipes" method="POST">
                        {{#if equipe}}
                        <label for="_id">ID: </label>
                        <input type="text" name="_id" readonly="true" class="form-control" value="{{equipe._id}}">
                        <br>

                        <label for="nome">Nome: </label>
                        <input type="text" id="nome" name="nome" class="form-control" value="{{equipe.nome}}">
                        <br>

                        <label for="ano">Ano: </label>
                        <input type="number" id="ano" name="ano" class="form-control" value="{{equipe.ano}}">
                        <br>

                        <label for="pais">Pais: </label>
                        <input type="text" id="pais" name="pais" class="form-control" value="{{equipe.pais}}">
                        <br>

                        <label for="mundial">Mundiais: </label>
                        <input type="text" id="mundial" name="mundial" class="form-control" value="{{equipe.mundial}}">
                        <br>
                        <br>
                        <button type="submit" class="btn btn-success">Editar
                            Equipe</button>
                    </form>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</main>