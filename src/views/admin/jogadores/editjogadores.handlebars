<main>
    <div class="p-5 mb-4 bg-light rounded-3">
        <div class="container-fluid py-5">
            <h3> Editar Jogador: </h3>
            <div class="card">
                <div class="card-body">
                    <form action="/rota_jogadores/jogadores/editar_jogadores" method="POST">
                        {{#if jogador}}
                        <label for="_id">ID: </label>
                        <input type="text" name="_id" readonly="true" class="form-control" value="{{jogador._id}}">
                        <br>

                        <label for="nome">Nome: </label>
                        <input type="text" id="nome" name="nome" class="form-control" value="{{jogador.nome}}">
                        <br>

                        <label for="idade">Idade: </label>
                        <input type="number" id="idade" name="idade" class="form-control" value="{{jogador.idade}}">
                        <br>

                        <label for="posicao">Posição: </label>
                        <input type="text" id="posicao" name="posicao" class="form-control" value="{{jogador.posicao}}">
                        <br>

                        {{/if}}
                        <label for="equipe">Time:</label>
                        <select name="time" class="custom-select">
                            <option value="" disabled selected></option>
                            {{#each equipes}}
                            <option value="{{nome}}">{{nome}}</option>
                            {{else}}
                            <option value="0">Nenhum time
                                registrado</option>
                            {{/each}}
                        </select>
                        <br>
                        <br>
                        <button type="submit" class="btn btn-success">Editar
                            Jogador</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

