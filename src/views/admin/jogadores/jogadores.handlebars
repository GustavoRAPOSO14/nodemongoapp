<main>
    <div class="p-5 mb-4 bg-light rounded-3">
        <div class="container-fluid py-5">
            <h2>Lista de Jogadores</h2>
            <hr>
            <a href="/rota_jogadores/jogadores/add">
                <button class="btn btn-success">Novo Jogador</button></a>
            {{#each jogadores}}
            <div class="card mt-4">
                <div class="card-body">
                    <h4><b>ID:</b>{{_id}}</h4>
                    <small><b>Nome:</b> {{nome}} </small><br>
                    <small><b>Idade:</b> {{idade}} </small><br>
                    <small><b>Posição:</b> {{posicao}} </small><br>
                    <small><b>Time:</b> {{time}} </small><br>
                    <br>
                    <!--Botão para editar alunos-->
                    <a href="/rota_jogadores/editar_jogadores/{{_id}}">
                        <button class="btn btn-success mt-3">
                            Editar Jogador
                        </button>
                    </a>
                    <!--botão para deletar aluno-->
                    <a href="/rota_jogadores/deletar_jogadores/{{_id}}">
                        <button class="btn btn-danger mt-3">
                            Deletar Jogador
                        </button>
                    </a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</main>