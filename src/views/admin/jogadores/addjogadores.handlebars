<main>
    <div class="p-5 mb-4 bg-light rounded-3">
        <div class="container-fluid py-5">
            <h3> Novo Jogador: </h3>
            <div class="card">
                <div class="card-body">
                    <form action="/rota_jogadores/jogadores/nova" method="POST">

                        <label for="nome">Nome: </label>
                        <input type="text" id="nome" name="nome" placeholder="Digite o nome do jogador"
                            class="form-control">
                        <br>

                        <label for="idade">Idade: </label>
                        <input type="number" id="idade" name="idade" placeholder="Idade do jogador" class="form-control">
                        <br>

                        <label for="posicao">Posicao: </label>
                        <input type="text" id="posicao" name="posicao" placeholder="Posicao do jogador" class="form-control">
                        <br>

                        <label for="equipe">Time:</label>
                        <select name="time" class="custom-select">
                            {{#each equipes}}
                            <option value="{{nome}}">{{nome}}</option>
                            {{else}}
                            <option value="0">Nenhum time registrado</option>
                            {{/each}}
                        </select>
                        <br>
                        <br>
                        <button type="submit" class="btn btn-success">Cadastrar Jogador</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>